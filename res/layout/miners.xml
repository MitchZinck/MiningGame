<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dip" >

    <Button
        android:id="@+id/buySteve"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Steve"
        android:onClick="buy"
        android:text="Buy"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/txtSteve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Steve"
        android:layout_alignTop="@+id/textViewSteve"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Steve \nWood Pickaxe\n$3000 - 200 OPM"
        android:textSize="6dp" />

    <ImageView
        android:id="@+id/Steve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/buySteve"
        android:src="@drawable/ic_launcher" />

    
    <!-- Dedicated Miner -->
        
        
    <TextView
        android:id="@+id/txtExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DediMiner"
        android:layout_alignLeft="@+id/txtDedi"
        android:gravity="center"
        android:text="Exp Miner \nIron Pickaxe\n$50000 - 1400 OPM"
        android:visibility="invisible"
        android:textSize="6dp" />
    
    <!-- Experienced Miner -->

    <Button
        android:id="@+id/Button01"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/txtExp"
        android:layout_toRightOf="@+id/Steve"
        android:onClick="buy"
        android:text="Sell"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/txtDedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ExpMiner"
        android:layout_alignLeft="@+id/txtSteve"
        android:gravity="center"
        android:text="Dedi Miner \nIron Pickaxe\n$15000 - 400 OPM"
        android:textSize="6dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtDediAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DediMiner"
        android:layout_below="@+id/ExpMiner"
        android:gravity="center"
        android:text="@string/integer_exp_miner"
        android:textSize="7dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/ExpMiner"
        android:layout_toRightOf="@+id/Steve"
        android:text="Buy"
        android:textSize="8dp" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignTop="@+id/txtDedi"
        android:onClick="buy"
        android:text="Sell"
        android:textSize="8dp" />

    <Button
        android:id="@+id/sellSteve"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/Steve"
        android:layout_alignLeft="@+id/buySteve"
        android:onClick="buy"
        android:text="Sell"
        android:textSize="8dp" />

    <ImageView
        android:id="@+id/ExpMiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtSteve"
        android:layout_below="@+id/textViewSteve"
        android:src="@drawable/miner" />

    <ImageView
        android:id="@+id/DediMiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ExpMiner"
        android:layout_below="@+id/txtDediAmount"
        android:src="@drawable/morris" />

    <Button
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtDediAmount"
        android:layout_toRightOf="@+id/Steve"
        android:text="Buy"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/textViewSteve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ExpMiner"
        android:layout_below="@+id/Steve"
        android:gravity="center"
        android:text="@string/integer_steve"
        android:textSize="7dp" />

    <TextView
        android:id="@+id/txtExpAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DediMiner"
        android:gravity="center"
        android:layout_below="@+id/Button01"
        android:text="@string/integer_dedi_miner"
        android:textSize="7dp" />

</RelativeLayout>